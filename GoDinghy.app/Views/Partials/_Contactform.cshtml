@model ContactformModel

        <div class="contactform-top">
            <h3>Kontaktformular</h3>
            <p>Udfyld formularen hvois du ønsker at blive kontaktet</p>
        </div>
        @using (Ajax.BeginForm("Contactform", "ContactformSurface", new { NodeId = Model.NodeId }, new AjaxOptions()
        {
            OnComplete = "contactformCompleted"
        }, new { @class = "contact" }))
        {
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.Name)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(x => x.Name, new { placeholder = "Indtast navn" })
                    @Html.ValidationMessageFor(x => x.Name)
                </div>
            </div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.Company)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(x => x.Company, new { placeholder = "Indtast firmanavn" })
                    @Html.ValidationMessageFor(x => x.Company)
                </div>
            </div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.Email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(x => x.Email, new { placeholder = "Indtast email" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.Message)
                </div>
                <div class="editor-field">
                    @Html.TextAreaFor(x => x.Message)
                    @Html.ValidationMessageFor(x => x.Message)
                </div>
            </div>
            <div>
                @Html.HiddenFor(x => x.NodeId, new { value = Model.NodeId })
                <button type="submit" id="contact-submit" class="costom" value="Send request"><span class="contact">Send</span></button>
            </div>
        }
