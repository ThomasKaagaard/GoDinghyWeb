@using Umbraco.Web
@model GoDinghy.app.Models.Helpers.MenuItemModel
@{
    GlobalModel Global = ViewBag.Global;
}
<div class="container-fluid">
    <div class="navbar">
        <div class="container">
            <div class="row">
                <div class="col-xs-4 col-md-4">
                    <a href="/" title="GoDinghy" class="logo">
                        <img src="~/Content/Image/logo.svg" alt="GoDinghy" title="GoDinghy" />
                    </a>
                </div>
                <div class="col-xs-8 col-md-8">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            @if (Global.IsLoggedIn)
                            {
                                <div class="login-menu navbar-collapse collapse">
                                    <p>Du er logget ind som: @User.Identity.Name</p>
                                    @using (Html.BeginUmbracoForm("MemberLogout", "MemberSurface", new { }))
                                    {
                                        <input type="submit" value="Log ud" />
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="login-menu navbar-collapse collapse">
                                    <a href="#" type="button" data-toggle="modal" data-target="#loginModal">
                                        Login
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="navbar-collapse collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    @foreach (var item in Model.Children)
                                    {
                                        <li><a href="@item.Url">@item.Name</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>